<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>	
	<head>
		<title>BuildBlogSoft</title>
		<style type="text/css">
			body {
				background-color: #456;
			}
			.posts {
				float:left;
				margin-right: 15px;
			}
			.post {
			}
			.post .avatar {
				float:left;
				margin-left: 5px;
				margin-right: 15px;
				margin-top: 5px;
				margin-bottom:5px;
			}
			.post .container {
				float:left;
				margin-bottom:5px;
			}
			.post .ballon {
				background-color: #FFF;
				width:600px;
				border: 2px solid #CCC;
				-webkit-border-radius: 8px;
				-moz-border-radius: 8px;
				border-radius: 8px;
			}
			.post .title {
				color: black;
				font: normal normal bold 1.1em Verdana;
				margin-left: 15px;
				margin-right: 15px;
				margin-top:15px;
				margin-bottom:15px;
			}
			.post .info {
				font: normal small-caps bold 0.7em Verdana;
				margin-left: 15px;
				margin-right: 15px;
				margin-top:15px;
				margin-bottom:15px;
			}
			.post .body {
				font: normal normal normal 0.9em Verdana;
				margin-left: 15px;
				margin-right: 15px;
				margin-top:15px;
				margin-bottom:15px;
			}
			.post .comments .ballon {
				width:500px;
				-webkit-border-radius: 8px;
				-moz-border-radius: 8px;
				border-radius: 8px;
			}
			.post .comments .b0 {
				background-color: #FFD;
				border: 2px solid #ACC;
			}
			.post .comments .b1 {
				background-color: #FDF;
				border: 2px solid #CCA;
			}
			.post .comments .b2 {
				background-color: #DFF;
				border: 2px solid #CAC;
			}
			.title {
				font-family: Verdana;
				color: white;
			}
			.widget {
				float:left;
				background-color: #FFF;
				width:200px;
				border: 2px solid #CCC;
				-webkit-border-radius: 8px;
				-moz-border-radius: 8px;
				border-radius: 8px;
			}
			.widget .title {
				font: normal normal bold 1.0em Verdana;
				color: black;
				margin-left: 15px;
				margin-right: 15px;
				margin-top:15px;
				margin-bottom:15px;
			}
			.widget .list {
				font: normal normal normal 0.9em Verdana;
				margin-left: 15px;
				margin-right: 15px;
				margin-top:15px;
				margin-bottom:15px;
			}
			.box {
				position: absolute;
				top: -121px;
				left: 50%;
				width: 300px;
				height: 120px;
				margin-left: -150px;
				z-index: 1;
			}
			.box .border {
				border: 1px solid #F50;
				width: 299px;
				height: 119px;
			}
			.box .line {
			}
			.box .line .label {
				float: left;
				margin-left: 20px;
				margin-top: 12px;
				margin-bottom: 10px;
				color: white;
				font: normal normal normal 0.9em Verdana;
			}
			.box .line .input {
				float: right;
				margin-top: 10px;
				margin-bottom: 10px;
				margin-right: 20px;
			}
			.box .submit {
				clear: both;
				float: right;
				margin-top: 5px;
				margin-bottom: 15px;
				margin-right: 30px;
				-webkit-border-radius: 3px;
				-moz-border-radius: 3px;
				border-radius: 3px;
				background-color: #F50;
				color: white;
				font: normal normal normal 0.9em Verdana;
			}
		    .box .submit .margin {
		    	margin-left:6px;
				margin-right:6px;
				margin-bottom:2px;
		    }
			.box .submit:hover {
				clear: both;
				float: right;
				margin-top: 5px;
				margin-bottom: 15px;
				margin-right: 30px;
				-webkit-border-radius: 3px;
				-moz-border-radius: 3px;
				border-radius: 3px;
				background-color: white;
				color: #F50;
				font: normal normal normal 0.9em Verdana;
				cursor: pointer;
			}
			.transparent {
				position: absolute;
				top: -120px;
				left: 50%;
				width: 300px;
				height: 120px;
				margin-left: -150px;
				background-color: #F50;
				filter:alpha(Opacity=60);
				-moz-opacity: 0.6;
				opacity: 0.6;
			}
			.bt {
				margin-left: 100px;
				width: 100px;
				height: 25px;
				background-color: #F50;
				color: white;
				font: normal bold normal 1.0em Verdana;
				text-align: center;
			}
			.bt:hover {
				margin-left: 100px;
				width: 100px;
				height: 25px;
				background-color: #F50;
				color: white;
				font: normal bold normal 1.0em Verdana;
				text-align: center;
				cursor: pointer;
			}
		</style>
		<script>
			scY = 0;
			function findPosY(obj) {
     			var curtop = 0;
     			if (obj.offsetParent) {
          			while (obj.offsetParent) {
               			curtop += obj.offsetTop
               			obj = obj.offsetParent;
          			}
     			} else if (obj.y) curtop += obj.y;
     			return curtop;
			}
			function moving(vel, dist) {
				var b = document.getElementById('b');
				var t = document.getElementById('t');
				var step = dist / 3;
				if(Math.abs(step) > 0.1) { 
					b.style.top = (findPosY(b) + step) + "px";
					t.style.top = (findPosY(t) + step) + "px";
					dist -= step;
					setTimeout("moving(" + vel + "," + dist + ");", vel);
				} else {
					if(step > 0) {
						b.style.top = "0px";
						t.style.top = "0px";
					} else {
						b.style.top = "-121px";
						t.style.top = "-121px";
					}
				}
			}
			function showHideAdminBox(vel, dist) {
				var b = document.getElementById('b');
				var t = document.getElementById('t');
				
				if(findPosY(b) >= 0) dist *= -1;
				
				setTimeout("moving(" + vel + "," + dist + ");", vel);			
			}
			
			function scrollingDetector() {
				var b = document.getElementById('b');
				var t = document.getElementById('t');
				if (navigator.appName == "Microsoft Internet Explorer") {
					scY = document.body.scrollTop;
				} else { 
					scY = window.pageYOffset;
				}
				setTimeout("scrollingDetector()", 100);
			}
		</script>
	</head>
	<body onload="">
		<div id="t" class="transparent"></div>
		<div id="b" class="box">
			<div class="border">
				<form name="loginForm" method="post" action="/" style="margin:0px">
					<div class="line">
						<div class="label">Username:</div> 
						<div class="input"><input type="text" name="username" value="" /></div>
					</div>
					<div class="line">
						<div class="label">Password:</div> 
						<div class="input"><input type="password" name="password" value="" /></div>
					</div>
					<div class="submit"><div class="margin" onclick="document.loginForm.submit();">Log In!</div></div>
				</form>
			</div>
			<div class="bt" onclick="showHideAdminBox(10,120);"><div class="margin">Admin</div></div>
		</div>
		<h1 class="title">BuildBlogSoft</h1>
		<div class="posts">
			<TMPL_LOOP NAME="posts">
			<div class="post">
				<div class="avatar"><img src="imgs/logo.png" width="50" height="50" alt="logo"/></div>
				<div class="container">
					<div class="ballon">
						<div class="title"><TMPL_VAR NAME="titulo" /></div>
						<div class="body"><TMPL_VAR NAME="artigo" /></div>
						<div class="info"><TMPL_VAR NAME="dp" /> | <span onclick="">Make a comment</span></div>
						<div class="comments">
							<TMPL_LOOP NAME="comments_erro">
							<div class="avatar"></div>
							<div class="container">
								<div class="ballon<TMPL_VAR NAME="__MOD3__"/>">
									<div class="info"></div>
									<div class="body"></div>
								</div>
							</div>
							</TMPL_LOOP>
						</div>
					</div
				</div>
			</div>
			</TMPL_LOOP>
		</div>
		<div class="widget">
			<div class="title">Archive</div>
			<ul class="list">
				<TMPL_LOOP NAME="archive">
				<li><TMPL_VAR NAME="month" /> <TMPL_VAR NAME="year" /> (<TMPL_VAR NAME="count"/>)</li>
				</TMPL_LOOP>
			</ul>
		</div>
	</body>
</html>